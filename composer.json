{
    "name": "reagordi/serializable-closure",
    "type": "library",
    "description": "Reagordi Serializable Closure provides an easy and secure way to serialize closures in PHP.",
    "keywords": [
        "component",
        "framework",
        "reagordi"
    ],
    "homepage": "https://reagordi.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/reagordi/serializable-closure/issues?state=open",
        "forum": "https://forum.reagordi.com/",
        "wiki": "https://wiki.reagordi.com/",
        "chat": "https://t.me/reagordi_community",
        "source": "https://github.com/reagordi/serializable-closure"
    },
    "funding": [
        {
            "type": "opencollective",
            "url": "https://opencollective.com/reagordi"
        },
        {
            "type": "github",
            "url": "https://github.com/sponsors/reagordi"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "reagordi/contracts-serializable-closure": "^1.0",
        "reagordi/support-serializable-closure": "^1.0"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^4.7",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.0.3",
        "roave/infection-static-analysis-plugin": "^1.34",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^5.20"
    },
    "autoload": {
        "psr-4": {
            "Reagordi\\Component\\SerializableClosure\\": "src"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true,
            "composer/package-versions-deprecated": true
        }
    }
}
